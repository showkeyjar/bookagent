# 应用配置
DEBUG=True

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bookagent
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bookagent_test

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 安全配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天

# LLM 配置 (支持所有兼容OpenAI API的模型服务)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# 通用LLM配置 (覆盖上面的OPENAI_*设置)
LLM_PROVIDER=openai  # openai, azure, 或 custom
LLM_API_BASE=https://api.openai.com/v1  # 自定义API基础URL
LLM_API_VERSION=2023-05-15  # Azure OpenAI需要
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# 存储配置
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=bookagent
STORAGE_SECURE=False

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
